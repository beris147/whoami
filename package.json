{
  "name": "whoami",
  "version": "1.0.0",
  "description": "Basic app with websockets in nodejs and react # backend inside server dir run `npm start` # front end inside client dir run `npm start`",
  "scripts": {
    "server": "npm start --prefix ./server",
    "client": "npm start --prefix ./client",
    "test-client": "npm run test --prefix ./client -- --watchAll=false",
    "test-domain": "npm run test --prefix ./domain",
    "test-server": "npm run test --prefix ./server",
    "test": "npm run test-domain && npm run test-client && npm run test-server",
    "predev": "npm run test",
    "dev": "concurrently --kill-others \"npm run server\" \"npm run client\"",
    "flow": "flow",
    "init-server": "npm i --prefix ./server",
    "init-client": "npm i --prefix ./client",
    "init-domain": "npm i --prefix ./domain && npm run build --prefix ./domain",
    "postinstall": "npm run init-server && npm run init-client && npm run init-domain"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beris147/whoami.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/beris147/whoami/issues"
  },
  "homepage": "https://github.com/beris147/whoami#readme",
  "devDependencies": {
    "concurrently": "^6.0.2",
    "flow-bin": "^0.149.0"
  }
}
